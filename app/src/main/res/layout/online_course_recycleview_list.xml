<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/course_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        android:text="Learn Digital Marketing"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/cardview_relative"
        android:layout_width="match_parent"
        android:layout_below="@id/course_heading"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/course_cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:clickable="true"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:focusable="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/course_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/default_image"
                    app:layout_constraintBottom_toBottomOf="@+id/course_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/course_description" />


                <TextView
                    android:id="@+id/course_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="30dp"
                    android:gravity="center_vertical"
                    android:minHeight="70dp"
                    android:text="Learn python language  ddfdfddfdfdfdfddf jjkj j kjfdfkj j kdjf dkfj dkf d dfkjdkjf kdjf dkfkdfkdkfdkfkdkfdkk jfkdjjjjjjdfdfdfcomplete tutorail from begineer to expert in one video in hindi"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/course_image"
                    app:layout_constraintTop_toTopOf="parent" />


                <RatingBar
                    android:id="@+id/course_rating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:isIndicator="false"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="1.0"
                    android:theme="@style/RatingBar"
                    app:layout_constraintBottom_toTopOf="@+id/course_actual_price"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toBottomOf="@+id/course_source" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="Certificate:"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/course_certificate" />

                <TextView
                    android:id="@+id/course_certificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Yes"
                    android:textColor="#006C05"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:id="@+id/course_discounted_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="49"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView5"
                    app:layout_constraintTop_toTopOf="@+id/textView5" />

                <TextView
                    android:id="@+id/course_actual_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="₹499"
                    android:textStyle="bold"
                    android:textColor="@color/color_grey"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/textView3" />

                <TextView
                    android:id="@+id/course_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:text="youtube.com"
                    android:textColor="#999A9C"
                    app:layout_constraintStart_toEndOf="@+id/course_image"
                    app:layout_constraintTop_toBottomOf="@+id/course_description" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="4.7"
                    android:textColor="#B56710"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/course_actual_price"
                    app:layout_constraintStart_toStartOf="@+id/course_source"
                    app:layout_constraintTop_toBottomOf="@+id/course_source" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:text="₹"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    app:layout_constraintStart_toEndOf="@+id/course_actual_price"
                    app:layout_constraintTop_toTopOf="@+id/course_actual_price" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


    </RelativeLayout>

    <ImageView
        android:id="@+id/course_paid"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:visibility="gone"
        android:translationY="35dp"
        android:translationX="-8dp"
        android:layout_above="@+id/cardview_relative"
        android:scaleType="centerInside"
        android:layout_alignEnd="@+id/cardview_relative"
        android:src="@drawable/paid" />

    <ImageView
        android:id="@+id/course_free"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/free"
        android:layout_above="@+id/cardview_relative"
        android:layout_alignEnd="@+id/cardview_relative"
        android:translationY="35dp"
        android:translationX="-8dp"
        tools:layout_editor_absoluteX="292dp"
        tools:layout_editor_absoluteY="98dp" />



</RelativeLayout>